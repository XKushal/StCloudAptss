<% include ../partials/header %>
<div class ="container">
    <div class ="row">
        <h1 style ="text-align: center">Edit <%=apartments.name%></h1>
        <div style = "width: 30%; margin: 50px auto;">
            <form action = "/apartments/<%=apartments._id %>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class = "form-control" type = "text" name ="apartments[name]" value ="<%=apartments.name%>">
                </div>
                <div class="form-group">
                    <input class = "form-control" type = "text" name ="apartments[image]" value ="<%=apartments.image%>">
                </div>
                <div class="form-group">
                    <input class = "form-control" type = "text" name ="apartments[description]" value ="<%=apartments.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href= "/apartments">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>