<% include ../partials/header %>
<div class ="container">
    <div class ="row">
        <h1 style ="text-align: center">Add new Comment to <%= apartment.name %></h1>
        <div style = "width: 30%; margin: 50px auto;">
            <form action = "/apartments/<%=apartment._id %>/comments" method = "POST">
                <div class="form-group">
                    <input class = "form-control" type = "text" name ="comment[text]" placeholder = "text">
                </div>
                <div class="form-group">
                    <input class = "form-control" type = "text" name ="comment[author]" placeholder = "author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href= "/apartments">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>